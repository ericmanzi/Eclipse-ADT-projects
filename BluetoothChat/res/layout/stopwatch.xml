<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <Button
        android:id="@+id/btnPause"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textTimer"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/btnStart"
        android:text="Pause" />
    
    <Button
        android:id="@+id/btnPauseEnter"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textTimer"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/btnStart"
        android:text="Enter" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textTimer"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="30dp"
        android:text="Start" />
    
    <Button
        android:id="@+id/btnStartEnter"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textTimer"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="30dp"
        android:text="Enter" />
    
    <Button
        android:id="@+id/manual"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textTimer"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginTop="30dp"
        android:text="Manual Control" />

    <TextView
        android:id="@+id/textTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="00:00:00"
        android:textColor="#ffffff"
        android:textSize="70sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnStart"
        android:layout_marginTop="54dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/log1Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="09:23AM"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:visibility="invisible"  />

            <TextView
                android:id="@+id/log1Timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="00:00:00"
                android:textColor="#ffffff"
                android:textSize="30sp" 
                android:visibility="invisible" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/rl1" >

            <TextView
                android:id="@+id/log2Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="09:23AM"
                android:textColor="#ffffff"
                android:textSize="30sp" 
                android:visibility="invisible" />

            <TextView
                android:id="@+id/log2Timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="00:00:00"
                android:textColor="#ffffff"
                android:textSize="30sp" 
                android:visibility="invisible" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/rl2" >

            <TextView
                android:id="@+id/log3Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="09:23AM"
                android:textColor="#ffffff"
                android:textSize="30sp" 
                android:visibility="invisible" />

            <TextView
                android:id="@+id/log3Timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="00:00:00"
                android:textColor="#ffffff"
                android:textSize="30sp" 
                android:visibility="invisible" />
        </RelativeLayout>
        
      <Button
        android:id="@+id/btnweekRecord"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:text="WEEK'S RECORD" />

    </RelativeLayout>

</RelativeLayout>